@model CategoryListViewModel


<ul class="list-group">
    @foreach (var item in Model.Categories)
    {
    <a
      
       asp-route="products"
       asp-route-category="@item.Name.ToLower()"
       class="list-group-item list-group-item-action @(Model.SelectedCategory == item.Name.ToLower()?"list-group-item-danger" : "")"
       >
      @item.Name
    </a>
    }
    
</ul>