@model Product


<div class="col-md-4 mt-3">
    <div class="card">
        <img src="~/image/@Model.ImageUrl" alt="@Model.Name"  width="200" height="220" />
        <div class="card-body mb-4">
            <h4 class="card-title">
                <a  asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="text-danger">@Model.Name</a>
            </h4>
            <small class="text-muted">
                <i class="fas fa-lira-sign"></i>@Model.Price
            </small>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">Details</a>
            <a href="#" class="btn btn-outline-danger btn-sm ml-3">Add To Cart</a>
        </div>
    </div>
</div>